                <div class="butn" data-filter="trips">wycieczki</div>
                <div class="butn" data-filter="events">wydarzenia</div>
            </div>

            <div class="image-container">
                <div class="meh school">
                    <img src="images/undraw_at_home_octe.svg" alt="szkoła">
                    <a href="/szkola" target="_blank">
                        <div class="info">
                            <h3>SZKOŁA</h3>
                        </div>
                    </a> 
                </div>

                <div class="meh sport">
                    <img src="images/undraw_track_and_field_33qn.svg" alt="dzień sportu" style ="height:20rem;">
                    <a href="/dzien_sportu" target="_blank">
                        <div class="info">
                            <h3>DZIEŃ SPORTU</h3>
                        </div>
                    </a>
                </div>


                <div class="meh volunteering">
                    <img src="images/undraw_positive_attitude_xaae.svg" alt="wolontariat">
                    <a href="/wolontariat" target="_blank">
                        <div class="info">
                            <h3>WOLONTARIAT</h3>
                        </div>
                    </a>
                </div>

                <div class="meh blood_donation">
                    <img src="images/undraw_doctors_hwty.svg" alt="krwiodastwo">
                    <a href="/krwiodastwo" target="_blank">
                        <div class="info">
                            <h3>KRWIODASTWO</h3>
                        </div>
                    </a>
                </div>

                <div class="meh trips">
                    <img src="images/undraw_Travelers_re_y25a.svg" alt="wycieczki" style="height: 19rem;">
                    <a href="/wycieczki" target="_blank">
                        <div class="info">
                            <h3>WYCIECZKI</h3>
                        </div>
                    </a>
                </div>

                <div class="meh events">
