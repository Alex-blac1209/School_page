{% extends 'base.html.twig' %}
{% block title %} Kontakt {% endblock title %}
{% block body %}
    <div class="banner_contact">
        <div class="banner_container">
            <a href="#" class="banner_logo"><img src="images/logo_k.png" alt="Logo Kasprzaka" class="banner_img"></a>
            <p>ZESPÓŁ SZKÓŁ NR 36 IM. MARCINA KASPRZAKA</p>
            <div class="banner_toggle">
                <i class="fas fa-bars" id="banner_toggle"></i>
            </div>
            <div class="contact" id="contact">
                <div class="wier">
                    <div class="image">
                        <img src="images/undraw_Email_campaign_re_m6k5.svg "  alt="">
                    </div>

                    <div class="form_container">
                        <form method="post">
                            <div class="inputBox">
                                <input type="text" placeholder="Imię" required name="imie">
                                <input type="text" placeholder="Nazwisko" required name="nazwisko">
                            </div>

                            <input type="email" placeholder="Email" name="email" required>
                            <textarea name="content" id="" cols="30" rows="10" placeholder="Treść wiadomości" required></textarea>
                            <input type="submit" value="wyślij">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="informations_contact">
        <div class="custom-shape-divider-top-1619165810">
            <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
